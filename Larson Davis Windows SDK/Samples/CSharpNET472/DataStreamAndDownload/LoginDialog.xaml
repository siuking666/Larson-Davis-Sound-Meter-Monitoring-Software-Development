<Window x:Class="LarsonDavis.Sdk.DataStreamAndDownload.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LarsonDavis.Sdk.DataStreamAndDownload"
		WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="Log In to the Meter" Height="140" Width="300">
    <Grid Margin="3">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock Text="Email" Grid.Row="0"/>
		<TextBox x:Name="UserName" Text="" Grid.Row="1"/>
		<TextBlock Text="Password" Grid.Row="2"/>
		<PasswordBox x:Name="Password" Grid.Row="3"/>
		<StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center">
			<Button Content="OK" Click="Button_Click" Width="60" Margin="3" IsDefault="True"/>
			<Button Content="Cancel" Click="Button_Click_1" Width="60" Margin="3" IsCancel="True"/>
		</StackPanel>
	</Grid>
</Window>
